<project name="Extract Traces" default="main" >
<target name="main">

  <exec executable = "bash" failifexecutionfails="true" timeout="20000">
    <arg value = "-c"/>
    <arg value = "mkdir target/jdk"/>
  </exec>

  <get verbose="true" ignoreerrors="false" maxtime="600" skipexisting="true" dest="target/jdk/jdk.tar.gz" src="http://cdn.azul.com/zulu/bin/zulu8.17.0.3-jdk8.0.102-linux_x64.tar.gz" />

  <exec executable = "bash" failifexecutionfails="true" timeout="20000">
    <arg value = "-c"/>
    <arg value = "tar xf target/jdk/jdk.tar.gz -C target/jdk"/>
  </exec>

  <exec executable = "bash" failifexecutionfails="true" timeout="20000">
    <arg value = "-c"/>
    <arg value = "cp -r target/jdk/zulu*/* jre/"/>
  </exec>

</target>
</project>

